$text:   #404040;
$link:   #0069D6;
$layout: #bfbfbf;

body {
	color: $text;
	font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
	font-size: 13px;
	line-height: 18px;
}
a {
	color: $link;
	text-decoration: none;
	&:hover {
		color: #444;
	}
}

input, textarea {
	border-radius: 3px;
	font-size: 13px;
	line-height: 18px;
	padding: 4px;
	color: gray;
}

.wrap {
	width: 940px;
	margin: 0 auto;
}

#main {
	width: 580px;
	float: left;
}

#sidebar {
	width: 340px;
	float: right;
}

header {
	padding: 10px 0 10px;
	border-bottom: 1px solid #ddd;
	margin-bottom: 10px;
	.logo {
		font-size: 30px;
		line-height: 25px;
		padding-top: 5px;
		font-weight: bold;
		small {
			font-size: 18px;
			font-weight: normal;
			color: #333;
			display: inline-block;
			a {
				color: $layout;
				&:hover {
					color: #888;
				}
			}
		}
	}
	.authentication {
		padding: 7px 14px;
		border: 1px solid #DDD;
		border-radius: 3px;
		box-shadow: inset 0 1px 0 white;
		background-color: whiteSmoke;
		background-image: -webkit-linear-gradient(top, white, whiteSmoke);
		background-image: -o-linear-gradient(top, white, whiteSmoke);
		background-image: linear-gradient(top, white, whiteSmoke);
		background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, white), color-stop(100%, whiteSmoke));
		background-image: -ms-linear-gradient(top, white, whiteSmoke);
		background-image: -moz-linear-gradient(top, white, whiteSmoke);
		background-image: -khtml-gradient(linear, left top, left bottom, from(white), to(whiteSmoke));
		float: right;
		text-align: right;
		
		.login {
			font-weight: bold;
			display: inline-block;
			background-image: url(<%= asset_path("github-icons.png") %>);
			padding-left: 20px;
			background-position: 0 3px;
			background-repeat: no-repeat;
		}
		li {
			display: inline-block;
			a.username { font-weight: bold; }
		  
		  span.unread_notification_counter {
        color: #5BB75B;
        font-weight: bold;
      }
			
			span {
				padding: 0 5px;
				color: $layout;
			}
		}
	}
}

.caption {
	color: $layout;
	font-weight: bold;
	text-transform: uppercase;
	line-height: 36px;
}

.form-stacked {
	padding-left: 0;
}

#instant_form {
	margin-bottom: 10px;
	textarea {
		display: block;
		width: 570px;
		margin-bottom: 5px;
		border: 1px solid #ddd;
		outline: 0;
	}
	.button {
		float: right;
	}
	ul {
		float: right;
		.help {
			padding: 4px 10px 0 2px;
			font-size: 12px;
		}
	}
	ul.new-post {
		float: left;
		padding: 3px 0;
		font-size: 12px;
		a {
			color: #bfbfbf;
		}
	}
}

footer {
	background: #eee;
	padding: 30px 0;
}